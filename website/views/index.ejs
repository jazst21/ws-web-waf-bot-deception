                <span class="tech-item" data-translate="AWS WAF">AWS WAF</span>
                <span class="tech-item" data-translate="CloudFront">CloudFront</span>
                <span class="tech-item" data-translate="Application Load Balancer">Application Load Balancer</span>
                <span class="tech-item" data-translate="Amazon Bedrock">Amazon Bedrock</span>
                <span class="tech-item" data-translate="Node.js Express">Node.js Express</span>
                <span class="tech-item" data-translate="SQLite">SQLite</span>
            </div>
        </div>
        
        <div class="getting-started">
            <h3 data-translate="Getting Started">Getting Started</h3>
            <p data-translate="Select each demo from the left menu to experience various Bot Control features.">Select each demo from the left menu to experience various Bot Control features.</p>
            <div class="cta-buttons">
                <a href="/bot-demo-1-info" class="btn btn-primary" data-translate="Start Demo 1">Start Demo 1</a>
                <a href="/bot-demo-2-info" class="btn btn-secondary" data-translate="Start Demo 2">Start Demo 2</a>
            </div>
        </div>
    </div>
    
    <% if (isBot) { %>
    <div class="bot-info-panel">
        <h3 data-translate="ü§ñ Bot Detection Information">ü§ñ Bot Detection Information</h3>
