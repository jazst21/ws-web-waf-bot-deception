app.get('/bot-demo-3', async (req, res) => {
    const isBot = req.headers['x-amzn-waf-targeted-bot-detected'] === 'true';

    // Fetch original pricing data from the database
    // Example: [{ flight: 'ABC123', price: 200 }, ...]
    const flights = await db.query('SELECT flight, price FROM tbl_flights');

    let result;
    if (isBot) {
        // Inflate prices for bots by 20-40%
        result = flights.map(flight => {
            const inflation = 1.2 + Math.random() * 0.2; // 1.2 to 1.4
            return {
                flight: flight.flight,
                price: Math.round(flight.price * inflation)
            };
        });
